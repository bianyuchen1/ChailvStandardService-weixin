<view class="page">
 
    <image style='height:250px;width:420px' src="{{image}}" mode="scaleToFill"></image>
 
    <view class="page__bd">
        <view class="weui-cells__title">带图标、说明、跳转的列表项</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">
                        <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                        <text>国内/国外</text>
                    </view>
                </view>
                <view class="weui-cell__bd">
                    <picker bindchange="bindCountryChange" value="{{countryIndex}}" range="{{countries}}">
                        <view class="weui-select weui-select_in-select-after">{{countries[countryIndex]}}</view>
                    </picker>
                </view>
            </view>
            <navigator url="../city/city?city={{city}}&city_value={{city_value}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-label">
                    <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                    <text>省市</text>
                </view>
                <text class="weui-cell__bd">{{city}}</text>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>

            <block wx:if="{{local == '-'}}">
                <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-label">
                        <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                        <text>地区</text>
                    </view>
                    <text class="weui-cell__bd">{{local}}</text>
                </view>
            </block>


            <block wx:if="{{local != '-'}}">
                <navigator url="../local/local?local={{local}}&local_value={{local_value}}&city_value={{city_value}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-label">
                        <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                        <text>地区</text>
                    </view>
                    <text class="weui-cell__bd">{{local}}</text>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </navigator>
            </block>
        </view>

        <view class="weui-footer weui-footer_fixed-bottom">
            <view class="weui-footer__links">
                <navigator url="" class="weui-footer__link">天津神州浩天科技有限公</navigator>
            </view>
            <view class="weui-footer__text">Copyright © 2018 Great-Chn, All Rights Reserved</view>
        </view>
    </view>
</view>